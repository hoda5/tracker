{
  "name": "@hoda5/tracker",
  "version": "1.0.8",
  "description": "",
  "main": "dist/tracker.js",
  "types": "dist/tracker.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "rm -rf dist ; tsc -p . --watch",
    "lint": "tslint --project .",
    "lintfix": "tslint --project . --fix",
    "test": "hdev test",
    "coverage": "sensible-browser coverage/index.html",
    "codecov": "cat coverage/coverage-final.json | npx codecov"
  },
  "author": "josefernandotolentino@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thr0w/tracker.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@hoda5/hdev": "^1.0.7",
    "@types/react": "^16.3.17",
    "tslint": "^5.9.1",
    "typescript": "^2.9.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "roots": [
      "src/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 75
      }
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "dependencies": {
    "react": "^16.4.0"
  }
}

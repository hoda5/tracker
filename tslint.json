{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "variable-name": false,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "space-before-function-paren": false,
    "radix": false,
    "quotemark": [
      true,
      "double",
      "avoid-escape",
      "avoid-template"
    ],
    "await-promise": true
  }
}
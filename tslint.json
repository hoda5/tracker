{
    "extends": "tslint:recommended",
    "rules": {
      "interface-name": false,
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "variable-name": {
        "severity": "warning"
      },
      "curly": [
        true,
        "ignore-same-line"
      ],
      "space-before-function-paren": false,
      "radix": false,
      "quotemark": [true, "single", "avoid-escape", "avoid-template"],
      "await-promise": true,
    }
  }